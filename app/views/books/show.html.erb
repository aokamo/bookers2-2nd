<%= notice %>
<div class = "container px-5 px-sm-0" >
  <div class = "row" >
    <div class = "col-mid-3">
      <h2>User info</h2>
        <%= render 'users/info', user: @user %>
      <h2>New book</h2>
        <%= render 'form', book: @new_book %>
    </div>
    <div class = "col-md-8 offset-1">
      <h2>Book detail</h2>
        <table class = "table table-striped">
          <tr>
            <td><%= link_to user_path(@user) do %>
                  <%= attachment_image_tag(@user, :profile_image, :fill, 50, 50, fallback: "noimage-1.png", size: "100x100") %><br />
                  <%= @user.name %>
                <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success edit_book" %></td>
              <td><%= link_to "Destroy", book_path(@book), class: "btn btn-sm btn-danger destroy_book" %></td>
            <% end %>
          </tr>
        </table>
    </div>
  </div>
</div>
